@model List<TblRfidCodiCaptEmbarque>


<div class="container">

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Generar Reporte</h2>

            <form asp-controller="RfidCodiCaptEmbarque" asp-action="GenerarReporte" method="post">
                <div class="row justify-content-between">
                    <div class="col">
                        <label class="form-label" for="startDate">Fecha de Inicio:</label>
                        <input class="form-control" type="date" id="startDate" name="startDate" required />

                    </div>
                    <div class="col">
                        <label class="form-label" for="endDate">Fecha de Fin:</label>
                        <input class="form-control" type="date" id="endDate" name="endDate" />
                    </div>
                    <div class="col">
                        <label class="form-label">¿Agrupar por?</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="agrupar" id="sinAgrupar" value="sinAgrupar" checked>
                                <label class="form-check-label" for="sinAgrupar">
                                    Sin agrupar
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="agrupar" id="agruparAcronimo" value="agruparAcronimo">
                                <label class="form-check-label" for="agruparAcronimo">
                                    Agrupado por acronimo y secuencia de viaje
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="agrupar" id="agruparViaje" value="agruparViaje">
                                <label class="form-check-label" for="agruparViaje">
                                    Agrupado por viaje
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <label class="form-label" for="btnGenerarReporte">&nbsp;</label>
                        <button class="btn btn-primary" id="btnGenerarReporte">Generar Reporte</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>